for_window [title="Initializing Target"] floating enable

# Teams notifications as a floating window
for_window [title="Microsoft Teams Notification" class="microsoft teams - preview"] floating enable
for_window [title="Microsoft Teams Notification" class="Microsoft Teams - Preview"] floating enable
